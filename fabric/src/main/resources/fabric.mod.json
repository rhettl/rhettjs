{
  "schemaVersion": 1,
  "id": "rhettjs",
  "version": "${mod_version}",
  "name": "RhettJS",
  "description": "JavaScript scripting engine for Fabric Minecraft servers",
  "authors": [
    "Rhett"
  ],
  "contact": {
    "sources": "https://github.com/RhettL/RhettJS"
  },
  "license": "MIT",
  "icon": "icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.rhett.rhettjs.RhettJSFabric"
      }
    ]
  },
  "mixins": [
    "rhettjs.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.15.0",
    "minecraft": "~1.21",
    "java": ">=21",
    "fabric-language-kotlin": ">=1.12.0"
  }
}
